@{
    ViewData["Title"] = "Home Page";
}

<section style="padding-bottom: 30px;">
    <div class="text-center">
        <h5 class="text-light text-left font-weight-light">Highlights</h5>
        <hr />
        <div id="carouselExampleIndicators" class="carousel slide carouselstyle moist-shadow rounded" data-ride="carousel" style="width: auto;">
            <ol class="carousel-indicators">
                @for (int i = 0; i < ViewBag.BannerImages.Count; i++)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                }
            </ol>
            <div class="carousel-inner carouselSize">
                @for (int i = 0; i < ViewBag.BannerImages.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <a asp-controller="Game" asp-action="Details" asp-route-id="@ViewBag.BannerImages[i].GameId">
                            <div class="carousel-image">
                                <img class="d-block carouselSize" src="@ViewBag.BannerImages[i].ImageURL" alt="@ViewBag.BannerImages[i].Game.Name" >
                            </div>
                        </a>
                        <div class="carousel-info">
                            <h3 class="float-left">@ViewBag.BannerImages[i].Game.Name</h3>
                            <h3 class="float-right">$69.99</h3>
                        </div>
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</section>


@{
    ViewData["Title"] = "Home Page";
}

<section>
    <div class="text-center">
        <div id="carouselExampleIndicators" class="carousel slide carouselstyle" data-ride="carousel">
            <ol class="carousel-indicators">
                @for (int i = 0; i < ViewBag.BannerImages.Count; i++)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                }
            </ol>
            <div class="carousel-inner">
                @for (int i = 0; i < ViewBag.BannerImages.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <a asp-controller="Game" asp-action="Details" asp-route-id="@ViewBag.BannerImages[i].GameId">
                            <img class="d-block imagesize" src="@ViewBag.BannerImages[i].ImageURL" alt="@ViewBag.BannerImages[i].Game.Name">
                        </a>
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</section>
@model Sprint.Models.UserRelationship

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="row centered-form">
    <div class="container col-md-6 col-md-offset-1">
        <h4 class="text-light font-weight-lighter text-uppercase">
            <i class="fa fa-user-plus text-secondary pr-2" aria-hidden="true"></i>Invite New Friend
        </h4>
        <hr />
        <form asp-action="Add">
            <div class="form-row">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-8">
                    <label class="control-label sr-only">Username</label>
                    <input class="form-control" id="add-friend-username" name="username" placeholder="Search for people..." />
                </div>
                <div class="form-group col-md-4">
                    <button type="submit" class="btn btn-primary w-100"><i class="fa fa-paper-plane pr-2" aria-hidden="true"></i>Invite</button>
                </div>
            </div>
        </form>

        <div>
            <a asp-action="Index">Back to Friends List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

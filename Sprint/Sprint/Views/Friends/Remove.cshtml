@model Sprint.Models.UserRelationship

@{
    ViewData["Title"] = "Remove Friend";
}

<h2 class="text-light font-weight-light text-uppercase">Remove Friend</h2>

<div>
    <h4 class="text-light text-left font-weight-light">Are you sure you want to remove this friend?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RelatedUser.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RelatedUser.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>

    <form asp-action="Remove">
        <input type="hidden" name="username" value="@Model.RelatedUser.UserName" />
        <input type="submit" value="Remove" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Friends List</a>
    </form>
</div>

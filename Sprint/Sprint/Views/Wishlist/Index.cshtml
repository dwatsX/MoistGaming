@model IEnumerable<Sprint.Models.UserGameWishlist>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Wishlist</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Game.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game.Developer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Game" asp-action="Details" asp-route-id="@item.GameId">@Html.DisplayFor(modelItem => item.Game.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Game.Developer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddedOn)
                </td>
                <td>
                    <form class="form-inline" asp-route-gameid="@item.GameId" asp-action="Remove">
                        <button type="submit" class="btn btn-primary btn-block btn-lg">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

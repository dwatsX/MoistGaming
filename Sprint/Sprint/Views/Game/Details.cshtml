@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager

@model Sprint.Models.Game

@{
    ViewData["Title"] = @Model.Name;
}

<h1>@Model.Name</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            @foreach (var image in Model.GameImages)
            {
                <img class="img-fluid" src="@image.ImageURL">
            }
        </div>
        <div class="col-md-4">
            <h5 class="text-light">@Html.DisplayNameFor(model => model.Developer)</h5>
            <p class="text-light">@Html.DisplayFor(model => model.Developer)</p>

            <h5 class="text-light">@Html.DisplayNameFor(model => model.GameType)</h5>
            <p class="text-light">@Html.DisplayFor(model => model.GameType.Name)</p>
        </div>
    </div>

    <hr />

    <div class="row">
        @if (SignInManager.IsSignedIn(User) && !User.IsInRole("Admin"))
        {
            <div class="col-sm-4">
                @if (ViewBag.IsWishlisted)
                {
                    <form class="w-100" asp-route-gameid="@Model.GameId" asp-controller="Wishlist" asp-action="Remove" asp-route-returnUrl="@Url.Action("Details", "Game", new { id = @Model.GameId })">
                        <button type="submit" class="btn btn-primary w-100">Remove from wishlist</button>
                    </form>
                }
                else
                {
                    <form class="w-100" asp-route-gameid="@Model.GameId" asp-controller="Wishlist" asp-action="Add" asp-route-returnUrl="@Url.Action("Details", "Game", new { id = @Model.GameId })">
                        <button type="submit" class="btn btn-primary w-100">Add to wishlist</button>
                    </form>
                }
            </div>
            <div class="col-sm-4">
                <a class="btn btn-primary w-100" role="button" asp-area="" asp-controller="Game" asp-action="Index">Add to Cart</a>
            </div>
        }
        else if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <div class="col-sm-4">
                <a class="btn btn-primary btn-danger w-100" role="button" asp-action="Delete" asp-route-id="@Model.GameId">Delete</a>
            </div>
            <div class="col-sm-4">
                <a class="btn btn-primary w-100" role="button" asp-action="Edit" asp-route-id="@Model.GameId">Edit</a>
            </div>
        }
        <div class="col-sm-4">
            <a class="btn btn-primary w-100" role="button" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@model Sprint.Models.Game

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GameId" />
            <div class="form-group">
                <label asp-for="GameTypeId" class="control-label"></label>
                <select asp-for="GameTypeId" class="form-control" asp-items="ViewBag.GameTypeId"></select>
                <span asp-validation-for="GameTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Developer" class="control-label"></label>
                <input asp-for="Developer" class="form-control" />
                <span asp-validation-for="Developer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegularPrice" class="control-label"></label>
                <input asp-for="RegularPrice" type="number" step="0.01" min="0" class="form-control" />
                <span asp-validation-for="RegularPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-primary w-25" role="button" asp-controller="Images" asp-action="Index" asp-route-gameId="@Model.GameId">Game Images</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary w-25" />
                <a class="btn btn-primary w-25" role="button" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
